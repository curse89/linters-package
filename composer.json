{
    "name": "curse89/linters-package",
    "description": "Package with linters and configurations",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Curse89\\LintersPackage\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Кривич Сергей",
            "email": "krivich@retailcrm.ru"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4",
        "friendsofphp/php-cs-fixer": "^3.8.0",
        "phpcompatibility/php-compatibility": "^9.3.5",
        "squizlabs/php_codesniffer": "^3.6.2",
        "phpmd/phpmd": "^2.12.0",
        "phpstan/phpstan": "^1.7.2",
        "phpstan/phpdoc-parser": "^1.5.1",
        "phpstan/phpstan-doctrine": "^1.3.5",
        "phpstan/phpstan-symfony": "^1.2.0",
        "phpro/grumphp": "^1.12",
        "symfony/dotenv": "^5.0",
        "symfony/framework-bundle": "^5.0",
        "civicrm/composer-compile-plugin": "^0.18.0"
    },
    "scripts": {
        "init-config": "Curse89\\LintersPackage\\ConfigurationsHandler::initConfigurations"
    },
    "extra": {
        "compile": [
            {
                "run": "@composer run-script init-config"
            }
        ]
    },
    "allow-plugins": {
        "civicrm/composer-compile-plugin": true,
        "symfony/flex": false
    }
}
